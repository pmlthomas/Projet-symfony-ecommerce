{% extends 'base.html.twig' %}

{% block title %}Modifier une addresse{% endblock %}

{% block content %}
    <h1 id="address_title">Modifier une addresse</h1>
    <a href="{{ path('app_account') }}" id="addressGoBack">Retour</a>
    <hr>
    {{ form_start(form) }}
        <div id="addressForm">
            <div class="row">
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.name) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.firstname) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.lastname) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.company) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.address) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.postal) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.city) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.country) }}</div>
                <div class="col-md-6" id="address_form_widget">{{ form_row(form.phone) }}</div>
            </div>
        </div>
        <div id="address_form_submit">
            {{ form_row(form.submit) }}
        </div>
    {{ form_end(form) }}
{% endblock %}